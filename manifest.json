{
  "manifest_version": 3,
  "name": "YouTube Summary Manager",
  "version": "1.1", 
  "description": "Manages YouTube video information for summarization.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open YouTube Summary Manager"
  },
  "commands": {
    "open-manager": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open YouTube Summary Manager"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}